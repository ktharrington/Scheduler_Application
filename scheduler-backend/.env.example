# ===================== Scheduler Backend .env.example =====================
# Copy to ".env" and fill in values. This file is safe to commit.

# --- Core ---
DATABASE_URL=postgresql://scheduler:scheduler@postgres:5432/scheduler
REDIS_URL=redis://redis:6379/0

# --- App URLs (must be PUBLIC HTTPS) ---
APP_BASE_URL=https://your-public-media-domain.example.com
MEDIA_ROOT=./media
MEDIA_URL_PATH=/media

# --- Meta Graph ---
META_GRAPH_VERSION=v21.0
MOCK_META=0

# --- CORS / Misc ---
ALLOWED_ORIGINS=*
TZ=Etc/UTC

# --- Storage backend ---
STORAGE_BACKEND=s3
MEDIA_BACKEND=s3

# --- S3-compatible (Cloudflare R2 sample) ---
S3_PROVIDER=r2
S3_REGION=auto
S3_ACCESS_KEY_ID=REPLACE_ME
S3_SECRET_ACCESS_KEY=REPLACE_ME
R2_ACCOUNT_ID=YOUR_R2_ACCOUNT_ID
S3_ENDPOINT_URL=https://${R2_ACCOUNT_ID}.r2.cloudflarestorage.com
S3_PUBLIC_BASE_URL=https://your-r2-public-domain.r2.dev
S3_BUCKET=my-scheduler-media-bucket
S3_PREFIX=uploads
S3_OBJECT_ACL_PUBLIC_READ=true

PAUSE_ON_CONSEC_FAILS=3
RETRY_DELAY_SEC=600
# ==========================================================================
